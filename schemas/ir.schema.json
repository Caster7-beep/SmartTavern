{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/smarttavern/ir.schema.json",
  "title": "SmartTavern Flow IR",
  "type": "object",
  "required": ["id", "version", "entry", "nodes"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "pattern": "^[A-Za-z0-9_\\-]+$" },
    "version": { "type": "integer", "minimum": 1 },
    "entry": { "type": "string", "pattern": "^[A-Za-z0-9_\\-]+$" },
    "metadata": { "type": "object", "additionalProperties": true },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/node" }
    }
  },
  "$defs": {
    "identifier": { "type": "string", "pattern": "^[A-Za-z0-9_\\-]+$" },
    "stringMap": {
      "type": "object",
      "propertyNames": { "pattern": "^[A-Za-z0-9_\\-]+$" },
      "additionalProperties": { "type": "string" }
    },
    "node": {
      "type": "object",
      "required": ["id", "type"],
      "additionalProperties": false,
      "properties": {
        "id": { "$ref": "#/$defs/identifier" },
        "type": { "type": "string", "minLength": 1 },
        "params": { "type": "object", "default": {} },
        "children": {
          "type": "array",
          "items": { "$ref": "#/$defs/identifier" },
          "default": []
        },
        "if": {
          "type": "object",
          "additionalProperties": false,
          "required": ["condition", "then"],
          "properties": {
            "condition": { "type": "string", "minLength": 1 },
            "then": {
              "type": "array",
              "items": { "$ref": "#/$defs/identifier" },
              "default": []
            },
            "else": {
              "type": "array",
              "items": { "$ref": "#/$defs/identifier" },
              "default": []
            }
          }
        },
        "subflow": {
          "type": "object",
          "additionalProperties": false,
          "required": ["ref"],
          "properties": {
            "ref": { "type": "string", "pattern": "^[A-Za-z0-9_\\-]+@\\d+$" },
            "input_map": { "$ref": "#/$defs/stringMap" },
            "output_map": { "$ref": "#/$defs/stringMap" },
            "share_state": { "type": "boolean", "default": true }
          }
        }
      }
    }
  }
}